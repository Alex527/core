<Addin id="Do.Platform" namespace="Do" version="1.0" isroot="true">
 
	<Runtime>
		<Import assembly="Do.Platform.dll"/>

		<Import assembly="Do.exe"/>
		<Import assembly="Do.Platform.Linux.dll" />
	</Runtime>
	
	<!-- Extension points -->
	<ExtensionPoint path="/Do/ItemSource">
		<ExtensionNode name="ItemSource" objectType="Do.Universe.IItemSource"/>
	</ExtensionPoint>
	<ExtensionPoint path="/Do/Action">
		<ExtensionNode name="Action" objectType="Do.Universe.IAction"/>
	</ExtensionPoint>
	
	<!-- Extensions included in the main assemblies -->
	<!-- Sources -->
	<Extension path="/Do/ItemSource">
	</Extension>
	
	<!-- Actions -->
	<Extension path="/Do/Action">
		<Action type="Do.Universe.Common.EmailAction" />
		<Action type="Do.Universe.Common.OpenAction" />
		<Action type="Do.Universe.Common.OpenURLAction" />
		<Action type="Do.Universe.Common.OpenWithAction" />
		<Action type="Do.Universe.Common.RevealAction" />
		<Action type="Do.Universe.Common.RunAction" />
	</Extension>


	<!-- ROOT EXTENSIONS -->
	<!-- Sources -->
	<Extension path="/Do/ItemSource">
		<ItemSource type="Do.Universe.AliasItemSource" />
		<ItemSource type="Do.Universe.InternalItemSource" />
		<ItemSource type="Do.Universe.ItemSourceItemSource" />
	</Extension>

	<!-- Actions -->
	<Extension path="/Do/Action">
		<Action type="Do.Universe.AliasAction" />
		<Action type="Do.Universe.DeleteAliasAction" />
	</Extension>

	<!-- PLATFORM.LINUX EXTENSIONS -->
	<!-- Item Sources -->
	<Extension path="/Do/ItemSource">
		<ItemSource type="Do.Platform.Linux.ApplicationItemSource" />
		<ItemSource type="Do.Platform.Linux.GNOMESpecialLocationsItemSource" />
	</Extension>

	<!-- Actions -->
	<Extension path="/Do/Action">
		<Action type="Do.Platform.Linux.CopyToClipboardAction" />
	</Extension>
</Addin>

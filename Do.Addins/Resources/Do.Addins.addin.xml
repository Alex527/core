<Addin id="Core" namespace= "Do" version="1.0" isroot="true">
 
	<Runtime>
		<Import assembly="Do.Addins.dll"/>
	</Runtime>
	
	<!-- Extension points -->
	<ExtensionPoint path="/Do/ItemSource">
		<ExtensionNode name="ItemSource" objectType="Do.Universe.IItemSource"/>
	</ExtensionPoint>
	<ExtensionPoint path="/Do/Action">
		<ExtensionNode name="Action" objectType="Do.Universe.IAction"/>
	</ExtensionPoint>
	<ExtensionPoint path="/Do/RenderProvider">
		<ExtensionNode name="RenderProvider" objectType="Do.UI.IRenderTheme"/>
	</ExtensionPoint>
	
	<!-- Extensions included in the main assemblies -->
	<!-- Sources -->
	<Extension path="/Do/ItemSource">
		<ItemSource type="Do.Universe.ApplicationItemSource" />
		<ItemSource type="Do.Universe.GNOMESpecialLocationsItemSource" />
	</Extension>
	
	<!-- Actions -->
	<Extension path="/Do/Action">
		<Action type="Do.Universe.EmailAction" />
		<Action type="Do.Universe.OpenAction" />
		<Action type="Do.Universe.OpenURLAction" />
		<Action type="Do.Universe.OpenWithAction" />
		<Action type="Do.Universe.RevealAction" />
		<Action type="Do.Universe.RunAction" />
		<Action type="Do.Universe.CopyToClipboardAction" />
	</Extension>
	
	<Extension path= "/Do/RenderProvider">
		<RenderProvider type="Do.UI.HUDTheme" />
		<RenderProvider type="Do.UI.ClassicTheme" />
		<RenderProvider type="Do.UI.GlassFrameTheme" />
		<RenderProvider type="Do.UI.MiniTheme" />
	</Extension>
</Addin>
